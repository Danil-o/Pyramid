                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-7 col-xl-8">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="account" role="tabpanel">
                        <% let i=0 %>
                            <% for(let checkout of completeUser.checkout) { %>
                                <% i++ %>
                                    <div class="card">
                                        <div class="card-header">
                                            <div class="card-actions float-right">
                                                <div class="dropdown show">
                                                </div>
                                            </div>
                                            <h5 class="card-title mb-0">اطلاعات شخصی سفارش <%= i %>
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <form>
                                                <div class="form-group">
                                                    <label for="inputEmail4">نام</label>
                                                    <input type="text" class="form-control" id="inputEmail4"
                                                        value="<%= checkout.firstname %>" readonly>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputEmail4">نام خانوادگی</label>
                                                    <input type="text" class="form-control" id="inputEmail4"
                                                        value="<%= checkout.lastname %>" readonly>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputEmail4">ایمیل</label>
                                                    <input type="email" class="form-control" id="inputEmail4"
                                                        value="<%= completeUser.email %>" readonly>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputAddress2">آدرس</label>
                                                    <input type="text" class="form-control" id="inputAddress2"
                                                        value="<%= checkout.address %>" readonly>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputAddress2">شماره</label>
                                                    <input type="number" class="form-control" id="inputAddress2"
                                                        value="<%= checkout.phone %>" readonly>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputState">شهر</label>
                                                    <input type="text" class="form-control" id="inputAddress2"
                                                        value="<%= checkout.city %>" readonly>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputZip">کد پستی</label>
                                                    <input type="text" class="form-control" id="inputZip"
                                                        value="<%=checkout.postcode %>" readonly>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                    </div>
                    <div class="tab-pane fade" id="orders" role="tabpanel">
                        <div class="card">
                            <% for (let i=0; i < products.length; i++) { %>
                                <div class="card-body">
                                    <% h=i+1 %>
                                        <h2>سفارش <%= h %>
                                        </h2>
                                        <div class="table-wrapper">
                                            <table class="fl-table">
                                                <thead>
                                                    <tr>
                                                        <th>وضعیت</th>
                                                        <th>شماره سفارش</th>
                                                        <th>قیمت پرداختی</th>
                                                        <th>قیمت</th>
                                                        <th>تعداد</th>
                                                        <th>تاریخ </th>
                                                        <th>نام</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for (let j=0; j < products[i].length; j++) { %>
                                                        <% let checkoutIndex=products[i][j].checkoutIndex %>
                                                            <tr>
                                                                <td>
                                                                    <% if(completeUser.checkout[checkoutIndex].status === true) {%>
                                                                        تحویل داده شده
                                                                    <% } else {%>
                                                                        در حال ارسال
                                                                    <% } %>
                                                                </td>
                                                                <td>
                                                                    <%= completeUser.checkout[checkoutIndex].OrderNum %>
                                                                </td>
                                                                <td>
                                                                    <%= products[i][j].total %>
                                                                </td>
                                                                <td>
                                                                    <%= products[i][j].price %>
                                                                </td>
                                                                <td>
                                                                    <%= products[i][j].qty %>
                                                                </td>
                                                                <td>
                                                                    <%= completeUser.checkout[checkoutIndex].date %>
                                                                </td>
                                                                <td>
                                                                    <%= products[i][j].name %>
                                                                </td>
                                                            </tr>
                                                            <% } %>
                                                <tbody>
                                            </table>
                                        </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
