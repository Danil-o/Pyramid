<%- include('./partials/header') %>


	<div class="hero-wrap hero-bread" style="background-image: url('images/bg_6.jpg');">
		<div class="container">
			<div class="row no-gutters slider-text align-items-center justify-content-center">
				<div class="col-md-9 ftco-animate text-center">
					<!-- <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Checkout</span></p> -->
					<h1 style="font-family: irsans;" class="mb-0 bread">پرداخت</h1>
				</div>
			</div>
		</div>
	</div>

	<table class="table" align="center">
		<thead class="thead-primary">
			<tr class="text-center">
				<th>&nbsp;</th>
				<th>&nbsp;</th>
				<th>محصول</th>
				<th>قیمت </th>
				<th>تعداد</th>
				<th>مبلغ پرداخت</th>
			</tr>
		</thead>
		<% for(let cart of carts) {%>
			<tbody id="tbody">
				<tr class="text-center">
					<td class="product-remove"><a href="#"><span class="ion-ios-close"></span></a>
					</td>
					<td class="image-prod">
						<div class="img">
							<img src="<%= cart.img %>" alt="">
						</div>
					</td>

					<td class="product-name">
						<h3 style="font-family: irsans;">
							<%= cart.name %>
						</h3>
					</td>

					<td class="price">
						<h3 class="cartprice" style="font-family: irsans;">
							<%= cart.price %>
						</h3>
					</td>

					<td class="quantity">
						<div class="input-group mb-3">
							<h3 class="cartqty" style="font-family: irsans;">
								<%= cart.qty %>
							</h3>
						</div>
					</td>

					<td class="total">
						<h3 class="cartpricemulcartqty" style="font-family: irsans;">
							<%= cart.qtymultiplyprice %>
						</h3>
					</td>
				</tr>
			</tbody>
			<% } %>
	</table>

	<section class="ftco-section">
		<div class="container">
			<form action="/checkout" class="billing-form" method="post">
				<div class="row justify-content-center">
					<div class="col-xl-10 ftco-animate">
						<h3 class="mb-4 billing-heading">فرم تحویل</h3>
						<div class="row align-items-end">
							<div class="col-md-6">
								<div class="form-group">
									<label for="username">نام کاربری شما</label>
									<input name="username" id="username" type="text" class="form-control"
										value="<%= user.username %>" readonly>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="email">ایمیل شما</label>
									<input name="email" id="email" type="email" class="form-control"
										value="<%= user.email %>" readonly>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="firstname">نام</label>
									<input name="firstname" id="firstname" type="text" class="form-control"
										placeholder="" required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="lastname">نام خانوادگی</label>
									<input name="lastname" id="lastname" type="text" class="form-control" placeholder=""
										required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="city">شهر شما</label>
									<input name="city" id="city" type="text" class="form-control" placeholder=""
										required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="postcode">کدپستی</label>
									<input name="postcode" id="postcode" type="number" class="form-control"
										placeholder="" required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="phone">شماره تماس</label>
									<input name="phone" id="phone" type="number" class="form-control" placeholder=""
										required>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="address">آدرس</label>
									<textarea name="address" id="address" class="form-control" cols="10" rows="2"
										required></textarea>
								</div>
							</div>
						</div>



						<div class="row mt-5 pt-3 d-flex">
							<div class="col-md-6 d-flex">
								<div class="cart-detail cart-total bg-light p-3 p-md-4">
									<h3 class="billing-heading mb-4">مبلغ پرداخت</h3>
									<p class="d-flex">
										<span>محصولات</span>
										<span id="allProductPrice"></span>
									</p>
									<p class="d-flex">
										<span>ارسال</span>
										<span id="postCost">50</span>
									</p>
									<p class="d-flex">
										<span>تخفیف</span>
										<span id="offer">20</span>
									</p>
									<hr>
									<p class="d-flex total-price">
										<span>مبلغ پرداخت</span>
										<span id="allOfAmount"></span>
									</p>
								</div>
							</div>
							<div class="col-md-6">
								<div class="cart-detail bg-light p-3 p-md-4">
									<h3 class="billing-heading mb-4">روش پرداخت</h3>
									<div class="form-group">
										<div class="col-md-12">
											<div class="radio">
												<label><input type="radio" name="optradio" class="mr-2"> بانک
													ملت</label>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="radio">
												<label><input type="radio" name="optradio" class="mr-2">بانک
													تجارت</label>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="radio">
												<label><input type="radio" name="optradio" class="mr-2"> بانک
													مسکن</label>
											</div>
										</div>
									</div>
									<div class="form-group">
										<div class="col-md-12">
											<div class="checkbox">
												<label><input type="checkbox" value="" class="mr-2">قوانین را مطالعه
													کردم</label>
											</div>
										</div>
									</div>
									<p><button href="#" class="btn btn-primary py-3 px-4">پرداخت</button></p>
								</div>
							</div>
						</div> <!-- .col-md-8 -->
					</div>
			</form>
		</div>
	</section> <!-- .section -->


	<div class="container">
		<div class="row">
			<div class="mouse">
				<a href="#" class="mouse-icon">
					<div class="mouse-wheel"><span class="ion-ios-arrow-up"></span></div>
				</a>
			</div>
		</div>
	</div>


	<script>

		const price = document.getElementsByClassName('cartprice');
		const qty = document.getElementsByClassName('cartqty');
		const total = document.getElementsByClassName('cartpricemulcartqty');

		let allProductPriceForCode = 0;
		for (let i = 0; i < price.length; i++) {
			const result = price[i].innerHTML * qty[i].innerHTML;

			total[i].innerHTML = result;
			allProductPriceForCode += result;
		}

		const allProductPrice = document.getElementById('allProductPrice');
		allProductPrice.innerHTML = allProductPriceForCode;

		const postCostForCode = parseInt(document.getElementById('postCost').innerHTML);
		const offerForCode = parseInt(document.getElementById('offer').innerHTML);

		const allOfAmountForCode = document.getElementById('allOfAmount');

		console.log(allOfAmountForCode);

		allOfAmountForCode.innerHTML = allProductPriceForCode + postCostForCode - offerForCode;


		$(document).ready(function () {

			var quantitiy = 0;
			$('.quantity-right-plus').click(function (e) {

				// Stop acting like a button
				e.preventDefault();
				// Get the field name
				var quantity = parseInt($('#quantity').val());

				// If is not undefined

				$('#quantity').val(quantity + 1);


				// Increment

			});

			$('.quantity-left-minus').click(function (e) {
				// Stop acting like a button
				e.preventDefault();
				// Get the field name
				var quantity = parseInt($('#quantity').val());

				// If is not undefined

				// Increment
				if (quantity > 0) {
					$('#quantity').val(quantity - 1);
				}
			});

		});


	</script>
	<%- include('./partials/footer') %>