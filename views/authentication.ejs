<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no,initial-scale=1.0,maximum-scale=1.0,minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/authentication.css">
    <title>ورود / ثبت نام</title>
</head>

<body>
    <div class="wrapper">
        <div class="title-text">
            <div class="title login">فرم ورود</div>
            <div class="title signup"> فرم ثبت نام</div>
        </div>
        <div class="form-container">
            <div class=""></div>
            <div class="slide-controls">
                <input type="radio" name="slide" id="login" checked>
                <input type="radio" name="slide" id="signup">
                <label for="login" class="slide login">ورود</label>
                <label for="signup" class="slide signup">ثبت نام</label>
                <div class="slider-tab"></div>
            </div>
            <div class="form-inner">
                <form action="/api/authentication-login" method="post" class="login" id="login-form" name="login-form">
                    <div class="field">
                        <input type="text" placeholder=" نام کاربری " name="username" id="username" required>
                    </div>
                    <p id="password"></p>
                    <div class="field">
                        <input type="password" placeholder=" کلمه عبور " name="password" id="password" required>
                    </div>
                    <p id="error_login_password"></p>
                    <div class="pass-link"><a href="#"> بازیابی کلمه عبور</a></div>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input type="submit" value="ورود" form="login-form" name="submit" id="login-btn">
                    </div>
                    <div class="signup-link"> حساب کابری ندارید؟ <a href="">ایجاد حساب</a></div>
                </form>

                <form action="/api/authentication-register" method="POST" class="signup" id="signup-form"
                    name="signup-form">
                    <div class="field">
                        <input type="email" placeholder="ایمیل" id="email" name="email" required>
                    </div>
                    <p id="email-error"></p>
                    <div class="field">
                        <input type="text" placeholder="نام کاربری" id="username" name="username" required>
                    </div>
                    <p id="username-error"></p>
                    <div class="field">
                        <input type="password" placeholder="کلمه عبور" id="password" name="password" required>
                    </div>
                    <p id="error-password"></p>
                    <div class="field">
                        <input id="confirmPassword" type="password" placeholder="تکرار کلمه عبور" name="confirmPassword"
                            required>
                    </div>
                    <p id="error-confirm"></p>
                    <div class="field btn">
                        <div class="btn-layer"></div>
                        <input id="signup-btn" type="submit" value="ثبت نام">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/authentication.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <% if(error.length) {%>
        <script>
            Swal.fire({
                position: 'top',
                icon: '<%= ICON %>',
                text: '<%= TEXT %>',
                width: 400,
                showConfirmButton: false,
                timer: 1800
            })
        </script>
        <% } %>
</body>

</html>