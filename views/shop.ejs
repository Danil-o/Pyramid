	<script>
		const filterOption = document.getElementById('people');
		let selectedOption = filterOption.value;

		// Get the initial selected option from the URL
		const queryParams2 = new URLSearchParams(window.location.search);
		if (queryParams2.has('minPrice')) {
			selectedOption = queryParams2.get('minPrice');
			// Set the selected option in the dropdown
			filterOption.value = selectedOption;
		}

		filterOption.addEventListener('change', function () {
			selectedOption = filterOption.value;

			const queryParams2 = new URLSearchParams(window.location.search);

			// Update the 'minPrice' parameter with the selected option
			queryParams2.set('minPrice', selectedOption);

			const newURL2 = window.location.origin + window.location.pathname + '?' + queryParams2.toString();

			window.location.href = newURL2;
		});

		const filterOption2 = document.getElementById('people2');
		let selectedOption2 = filterOption2.value;

		// Get the initial selected option from the URL
		const queryParams = new URLSearchParams(window.location.search);
		if (queryParams.has('maxPrice')) {
			selectedOption2 = queryParams.get('maxPrice');
			// Set the selected option in the dropdown
			filterOption2.value = selectedOption2;
		}

		filterOption2.addEventListener('change', function () {
			selectedOption2 = filterOption2.value;

			const queryParams = new URLSearchParams(window.location.search);

			// Update the 'maxPrice' parameter with the selected option
			queryParams.set('maxPrice', selectedOption2);

			const newURL2 = window.location.origin + window.location.pathname + '?' + queryParams.toString();

			window.location.href = newURL2;
		});

	</script>

